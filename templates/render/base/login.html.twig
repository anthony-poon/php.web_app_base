{% extends 'component/view/base.html.twig' %}

{% block stylesheets %}
{% endblock %}

{% block javascripts %}
{% endblock %}

{% block body %}
    <div class="py-5">
        <div class='row'>
            <div class='col col-lg-8 offset-lg-2 col-xl-6 offset-xl-3'>
                <div class='card'>
                    <div class='card-body py-5 px-md-5'>
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <div class='row my-5'>
                            <div class="col text-center">
                                <i class='material-icons text-muted'>
                                    <span class='display-1'>account_circle</span>
                                </i>
                            </div>
                        </div>
                        <form method="post">
                            <div class="form-group">
                                <label for="inputUsername" class="sr-only">Username</label>
                                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="Username" required autofocus>
                            </div>
                            <div class="form-group">
                                <label for="inputPassword" class="sr-only">Password</label>
                                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
                            </div>


                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >
                            <div class="form-group text-center">
                                <button class="btn btn-primary btn-sm" type="submit">
                                    Sign in
                                </button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}

{% block modal %}
{% endblock %}