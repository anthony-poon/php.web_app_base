<div class="pt-5" id="side-menu">
    {% for item in template_helper.getSideMenu %}
        {% if item.hide is not defined or (item.hide is defined and not item.hide) %}
            <div class="row">
                <div class="col">
                    {% if item.url is defined %}
                        <a href="{{ item.url }}" class="menu-item btn-like py-1">
                            {% if item.icon is defined %}
                                <i class="material-icons p-1">{{ item.icon }}</i>
                            {% else %}
                                <i class="material-icons p-1 invisible">home</i>
                            {% endif %}
                            <span class="text-wrapper ml-3"><small>{{ item.text }}</small></span>
                        </a>
                    {% else %}
                        <div class="menu-item btn-like py-1">
                            {% if item.icon is defined %}
                                <i class="material-icons p-1">{{ item.icon }}</i>
                            {% else %}
                                <i class="material-icons p-1 invisible">home</i>
                            {% endif %}
                            <span class="text-wrapper ml-3"><small>{{ item.text }}</small></span>
                        </div>
                    {% endif %}
                </div>
            </div>
        {% endif %}
    {% endfor %}
</div>