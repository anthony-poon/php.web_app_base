{% set table = entity_tabler_helper.compile %}
<table class="table table-hover" id="user-table"
       data-entity-table
       data-btn="{{ table.btn }}"
       data-column="{{ table.column }}"
>
    <thead class="thead-light">
    <tr>
        {% for h in table.header %}
            <th {{ h.priority is defined ? "data-priority=" ~ h.priority : null }}>{{ h.text }}</th>
        {% endfor %}
        {% if table.haveToolbar %}
            <th data-priority="1"> </th>
        {% endif %}
    </tr>
    </thead>
    <tbody>
    {% for index, row in table.body %}
        <tr>
            {% for col in row.content %}
                <td class="align-middle">{{ col }}</td>
            {% endfor %}
            {% if table.haveToolbar %}
                <td class="text-right align-middle">
                    <div class="btn-group">
                        {% if row.param.read is defined %}
                            <a class="btn btn btn-link" href="{{ row.param.read }}">
                                <i class="far fa-eye"> </i>
                            </a>
                        {% endif %}
                        {% if row.param.update is defined %}
                            <a class="btn btn btn-link" href="{{ row.param.update }}">
                                <i class="far fa-edit"> </i>
                            </a>
                        {% endif %}
                        {% if row.param.delete is defined %}
                            <a class="btn btn btn-link text-danger" href="{{ row.param.delete }}">
                                <i class="fas fa-times"> </i>
                            </a>
                        {% endif %}
                    </div>

                </td>
            {% endif %}
        </tr>
    {% endfor %}
    </tbody>
</table>